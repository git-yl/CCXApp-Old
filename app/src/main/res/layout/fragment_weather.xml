<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/weather_frag">

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/weather_image_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_city_tv"
            android:text="天气预报"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/weather_image_iv"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/start_audio"
            android:layout_height="30dp"
            android:src="@drawable/startaudio"
            android:layout_toRightOf="@+id/weather_city_tv"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_temperture_tv"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
